{
  "expo": {
    "name": "Edumon",
    "slug": "Edumon",
    "fonts": [
      {
        "name": "Pixel Font",
        "asset": "./assets/fonts/pixel-font.ttf",
        "fontFamily": "pixel-font"
      }
    ],
    "version": "1.0.0",
    "orientation": "landscape",
    "icon": "./assets/edumon-logo-education.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/edumon-logo-education.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "permissions": ["AUDIO_RECORDING"]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/monsters/ignekko.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["AUDIO_RECORDING"]
    },
    "web": {
      "favicon": "./assets/monsters/ignekko.png"
    }
  }
}
